#!/usr/bin/env rc

type Test component { };

func not_evaluated (flag *bool) bool {
  *flag = true;
  return true;
}

func test (num uint; desc +const []uint8; status bool) {
  if status {
    println `ok `, num, ` - `, desc;
  } else {
    println `not ok `, num, ` - `, desc;
  }
}

init (this *Test) Main () {
  println `1..24`;

  test (1u, `literal false`, false == false);
  test (2u, `literal true`, true == true);

  test (3u, `literal false!: `, !false == true);
  test (4u, `literal true!: `, !true == false);

  test (5u, `literal false || false: `, (false || false) == false);
  test (6u, `literal false || true: `, (false || true) == true);
  test (7u, `literal true || false: `, (true || false) == true);
  test (8u, `literal true || true: `, (true || true) == true);

  test (9u, `literal false && false: `, (false && false) == false);
  test (10u, `literal false && true: `, (false && true) == false);
  test (11u, `literal true && false: `, (true && false) == false);
  test (12u, `literal true && true: `, (true && true) == true);

  var f, t bool;
  f = false;
  t = true;

  test (13u, `false!: `, !f == true);
  test (14u, `true!: `, !t == false);

  test (15u, `false || false: `, (f || f) == false);
  test (16u, `false || true: `, (f || t) == true);
  test (17u, `true || false: `, (t || f) == true);
  test (18u, `true || true: `, (t || t) == true);

  test (19u, `false && false: `, (f && f) == false);
  test (20u, `false && true: `, (f && t) == false);
  test (21u, `true && false: `, (t && f) == false);
  test (22u, `true && true: `, (t && t) == true);

  var flag bool;
  flag = false;
  t && f && not_evaluated (&flag);
  test (23u, `short circuit &&`, flag == false);

  flag = false;
  f || t || not_evaluated (&flag);
  test (24u, `short circuit ||`, flag == false);
}

instance t Test Main;
