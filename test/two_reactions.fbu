type Actuator component {
  flag bool;
  bang1 port ();
};

action (this @Actuator const) (!this.flag) {
  trigger bang1 () {
    this.flag = true;
  }
}

type Detector component { };

reaction (this @Detector const) bang () {
  println `Bang Immutable`;
  trigger {
    println `Bang Mutable`;
  }
}

type System component {
  actuator Actuator;
  detector1 Detector;
  detector2 Detector;
};

bind (this @System) {
  this.actuator.bang1 -> this.detector1.bang;
  this.actuator.bang1 -> this.detector2.bang;
}

func (this @System) init () { }

instance system System init;
